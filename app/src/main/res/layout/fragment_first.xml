<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <!-- TODO: Update blank fragment layout -->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/cityFirst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:text="cityFirst"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/descriptionFirst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tempFirst"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-99dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:text="descriptionFirst"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tempFirst"
            android:layout_width="163dp"
            android:layout_height="82dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="99dp"
            android:gravity="center"
            android:text="tempFirst"
            android:textAllCaps="true"
            android:textColor="#ffffff"
            android:textSize="70sp" />

        <TextView
            android:id="@+id/textDay"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="213dp"
            android:textColor="#ffffff"
            android:text="TextDay" />

        <TextView
            android:id="@+id/textSegodna"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textDay"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"
            android:text="@string/Segodna" />

        <TextView
            android:id="@+id/tempMaxSeg"
            android:layout_width="29dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textSegodna"
            android:layout_toEndOf="@+id/cityFirst"
            android:textColor="#ffffff"
            android:text="TempMax" />

        <TextView
            android:id="@+id/tempMinSeg"
            android:layout_width="26dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textDay"
            android:layout_marginEnd="17dp"
            android:textColor="#ffffff"
            android:text="TempMin" />

    </RelativeLayout>


</FrameLayout>